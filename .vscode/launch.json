{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Debug with GDB",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/binary",
		"args": [],
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  }
		],
		"miDebuggerPath": "/usr/bin/gdb",
		"preLaunchTask": "make"
	  }
	]
  }